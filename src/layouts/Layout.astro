---
import "@fontsource/inter";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import "@fontsource/inter/800.css";
import "@fontsource/inter/900.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/Logo.png" />
    <meta name="description" content="Jasa pembuatan website murah dengan kualitas terbaik. Kami menawarkan website responsif dan custom sesuai kebutuhan bisnis Anda dengan harga terjangkau. Mulai proyek website Anda sekarang!" />
    <meta name="author" content="RexDev" />
    <meta name="robots" content="index, follow" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Jasa pembuatan website murah dengan kualitas terbaik. Kami menawarkan website responsif dan custom sesuai kebutuhan bisnis Anda dengan harga terjangkau. Mulai proyek website Anda sekarang!" />
    <meta property="og:image" content="/Logo.png" />
    <meta property="og:url" content="https://jasa-website-murah.vercel.app/" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="Jasa pembuatan website murah dengan kualitas terbaik. Kami menawarkan website responsif dan custom sesuai kebutuhan bisnis Anda dengan harga terjangkau. Mulai proyek website Anda sekarang!" />
    <meta name="twitter:image" content="/Logo.png" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <main aria-label="Main content">
      <slot />
    </main>
    <style is:global>
      html {
        font-family: Inter, sans-serif;
        background-color: #26272b;
        overflow-x: hidden;
        scroll-behavior: smooth !important;
      }
      body {
        margin: 0;
        padding: 0;
      }
    </style>
  </body>
</html>